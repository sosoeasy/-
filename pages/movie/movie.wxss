/* pages/movie/movie.wxss */
.content{
    background-color: #3A3A3A;
    min-height: 700px;
}
.movie{
    display: flex;
    flex-direction: row;
    margin-top:  4px;
}
.pic image{

    width: 100px;
    height: 150px;
}
.movie-info{
    margin-left: 20px;
}
.base-info{
    margin-bottom: 20px;
    color: lightgray;
    font-size: 12px;
    line-height: 20px;
}
.hr{
    margin-top: 2px;
    height: 2px;
    width: 100%;
    background-color: black;
    border-bottom: gray solid 1px;
    border-top: gray solid 1px;
    opacity: 0.2px;
}